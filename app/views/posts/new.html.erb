<h2> New Post </h2>

<div class="form-container">
  <%= form_for @post do |p| %>
    <div class="form-group">
      <%= p.text_field :title, placeholder: "Title", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= p.text_area :body, placeholder: "Content", class: "form-control"%>
    </div>
    <div class="form-group">
      <%= p.submit "Create" %>
    </div>
  <% end %>
</div>
